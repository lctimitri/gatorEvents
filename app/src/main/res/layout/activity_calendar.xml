<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/ufl_purple"
    android:orientation="vertical">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_showOtherDates="none"
        app:mcv_selectionColor="@color/ufl_orange"
        app:mcv_arrowColor="#FFF"
        app:mcv_headerTextAppearance="@style/CalendarText"
        app:mcv_dateTextAppearance="@style/CalendarText"
        app:mcv_weekDayTextAppearance="@style/CalendarText" />


</LinearLayout>
