<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <item name="colorPrimaryDark">@color/ufl_orange_dark</item>
        <item name="android:colorPrimary">#FFB74D</item>
        <item name="colorControlNormal">@color/ufl_purple</item>
        <item name="colorAccent">@color/ufl_orange</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
    </style>

    <style name="ActionBarTheme" parent="android:Theme.Material.Light">
        <item name="colorPrimaryDark">@color/ufl_orange_dark</item>
        <item name="android:colorPrimary">@color/ufl_orange</item>
        <item name="colorControlNormal">@color/ufl_purple</item>
        <item name="colorAccent">@color/ufl_purple</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
        <item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item>
        <item name="android:actionBarStyle">@style/Widget.ActionBar.Logo</item>
    </style>

    <style name="EventsTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/ufl_orange</item>
    </style>

    <style name="Widget.ActionBar.Logo">
        <item name="android:background">@color/ufl_orange</item>
        <item name="android:logo">@drawable/gatorevents</item>
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="colorControlNormal">@color/ufl_purple</item>
        <item name="android:textColorSecondary">@color/ufl_purple</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#4221A6</item>
    </style>

    <style name="CustomLinePageIndicator">
        <item name="strokeWidth">4dp</item>
        <item name="lineWidth">30dp</item>
        <item name="unselectedColor">#E68800</item>
        <item name="selectedColor">#FFB74D</item>
    </style>

    <style name="AppThemeNoTitle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

